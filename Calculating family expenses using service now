import java.util.Scanner;

public class FamilyExpensesCalculator {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        String[] categories = {"Rent", "Groceries", "Utilities", "Transport", "Education", "Entertainment", "Miscellaneous"};
        double[] expenses = new double[categories.length];
        double total = 0;

        System.out.println("=== Family Expenses Calculator ===");

        for (int i = 0; i < categories.length; i++) {
            System.out.print("Enter expense for " + categories[i] + ": ");
            expenses[i] = scanner.nextDouble();
            total += expenses[i];
        }

        System.out.println("\n--- Summary ---");
        for (int i = 0; i < categories.length; i++) {
            System.out.printf("%-15s : $%.2f%n", categories[i], expenses[i]);
        }

        System.out.printf("\nTotal Monthly Expense: $%.2f%n", total);

        scanner.close();
    }
}
